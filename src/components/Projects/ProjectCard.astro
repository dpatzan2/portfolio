---

import type { Project } from '../../data/projects';

export interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="bg-white/5 rounded-lg p-4 mb-2 border-l-4 border-ubuntu-orange transition-all duration-300 hover:bg-white/10 hover:translate-x-1 group">
  <a 
    href={project.link} 
    target={project.target || "_blank"}
    class="text-inherit no-underline block"
  >
    <h3 class="text-ubuntu-orange text-lg font-semibold mb-2.5 group-hover:text-orange-400 transition-colors">
      {project.title}
    </h3>
    {project.description.map((desc) => (
      <p class="mb-1 text-gray-200 leading-relaxed">{desc}</p>
    ))}
  </a>
</div>