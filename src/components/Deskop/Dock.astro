<style>
  .dock-indicator {
    transition: all 0.2s ease;
  }
  
  .dock-indicator.active {
    width: 6px;
    background-color: #E95420;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const dockItems = document.querySelectorAll('[data-dock-window]');
    
    dockItems.forEach((item) => {
      item.addEventListener('click', () => {
        const windowId = (item as HTMLElement).dataset.dockWindow;
        if (windowId && (window as any).windowManager) {
          (window as any).windowManager.toggleWindow(windowId);
        }
      });
    });
  });
</script>